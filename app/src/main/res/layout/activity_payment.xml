<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"
    tools:context=".PaymentActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginText"
        android:textSize="33sp"
        android:textColor="@color/colorBlack"
        android:text="Turgut Otopark Sistemi"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"></TextView>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/parklogo"
        android:layout_below="@id/loginText"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageLogo"></ImageView>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ödenecek Tutar"
        android:textColor="@color/colorWhite"
        android:textSize="30sp"
        android:id="@+id/textPay"
        android:layout_marginTop="40dp"
        ></TextView>

    <TextView
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/colorBlack"
        android:text="- TL"
        android:layout_below="@id/textPay"
        android:layout_marginTop="10dp"
        android:id="@+id/textPayment"></TextView>

    <Button
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonbackground"
        android:layout_below="@id/textPayment"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:onClick="addHome"
        android:text="Hesabı Kapat"
        android:textColor="@color/colorWhite"></Button>

</RelativeLayout>