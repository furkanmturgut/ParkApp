<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_height="70dp">

    <ImageView
        android:id="@+id/imagePlate"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/plate"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"></ImageView>

    <TextView
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="20dp"
        android:text="68 FK 398"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/imagePlate"
        android:textSize="22sp"
        android:gravity="center"
        android:id="@+id/textPlate"></TextView>

    <TextView
        android:id="@+id/textBrand"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="20dp"
        android:text="18 Jan 19.00"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/textPlate"
        android:layout_marginRight="20dp"></TextView>




</RelativeLayout>